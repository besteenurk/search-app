{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "strictPropertyInitialization": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src"
  ]
}
